# API defaults
NODE_ENV=development
PORT=3001
LOG_LEVEL=info
PUBLIC_ORIGIN=http://localhost:3001

# Admin bootstrap key (used for /api/admin/*)
ADMIN_API_KEY=change-me

# Lightning Provider (lnbits, opennode, mock)
LIGHTNING_PROVIDER=lnbits
LN_BITS_URL=http://localhost:15001
LN_BITS_API_KEY=changeme
ENABLE_REGTEST_PAY=false
ENABLE_REGTEST_FUND=false

# OpenNode configuration (optional)
OP_NODE_API_KEY=changeme-opennode
OP_NODE_WEBHOOK_SECRET=changeme-webhook

# Database URLs
# For Postgres (local docker-compose):
DATABASE_URL=postgresql://nostrstack:nostrstack@localhost:5432/nostrstack
# For SQLite fallback (dev/tests):
# DATABASE_URL=file:./dev.db

# Gallery Frontend
VITE_API_BASE_URL=http://localhost:3001
VITE_NOSTRSTACK_HOST=localhost:3001
VITE_NOSTRSTACK_RELAYS=wss://relay.damus.io
