{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run seed:dev && tsx watch src/server.ts",
    "build": "tsup src/server.ts --format esm --dts --clean --external @opentelemetry/api,@opentelemetry/sdk-node,@opentelemetry/auto-instrumentations-node,@opentelemetry/exporter-trace-otlp-http,@opentelemetry/resources,@opentelemetry/semantic-conventions,@opentelemetry/context-async-hooks",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:pay": "playwright test tests/pay-to-act.spec.ts",
    "test:e2e:nostr": "playwright test tests/nostr-auth.spec.ts",
    "test:mutinynet": "node --loader tsx scripts/mutinynet-smoke.ts",
    "test:lnbits-prod": "node scripts/lnbits-prod-smoke.js",
    "e2e:serve": "ADMIN_API_KEY=${ADMIN_API_KEY:-test-admin} OP_NODE_API_KEY=${OP_NODE_API_KEY:-test-key} OP_NODE_WEBHOOK_SECRET=${OP_NODE_WEBHOOK_SECRET:-whsec_test} DATABASE_URL=${DATABASE_URL:-file:./test.db} tsx scripts/e2e-server.ts",
    "prisma:generate": "sh scripts/prisma-generate.sh",
    "prisma:generate:pg": "sh scripts/prisma-generate-pg.sh",
    "postinstall": "pnpm prisma:generate",
    "seed": "DATABASE_URL=${DATABASE_URL:-file:./dev.db} tsx scripts/seed.ts",
    "seed:dev": "DATABASE_URL=${DATABASE_URL:-file:./dev.db} tsx prisma/seed-dev.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "9.0.1",
    "@fastify/formbody": "7.4.0",
    "@fastify/helmet": "11.1.1",
    "@fastify/rate-limit": "8.1.1",
    "@fastify/sensible": "5.6.0",
    "@fastify/static": "6.12.0",
    "@fastify/swagger": "8.14.0",
    "@fastify/swagger-ui": "2.1.0",
    "@opentelemetry/auto-instrumentations-node": "0.67.2",
    "@opentelemetry/exporter-trace-otlp-http": "0.208.0",
    "@opentelemetry/resources": "2.2.0",
    "@opentelemetry/sdk-node": "0.208.0",
    "@opentelemetry/semantic-conventions": "1.38.0",
    "@prisma/client": "5.20.0",
    "dotenv": "16.4.5",
    "fastify": "4.26.2",
    "fastify-plugin": "4.5.1",
    "fastify-type-provider-zod": "2.1.0",
    "jose": "5.9.2",
    "nostr-tools": "^2.18.2",
    "pino": "8.19.0",
    "pino-pretty": "11.2.2",
    "prom-client": "15.0.0",
    "ws": "^8.18.0",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@types/node": "22.7.5",
    "@types/pino-pretty": "5.0.0",
    "@types/sinon": "10.0.19",
    "@types/ws": "8.18.1",
    "@vitest/coverage-v8": "2.1.9",
    "eslint": "8.57.0",
    "node-fetch": "3.3.2",
    "prisma": "5.20.0",
    "tsup": "8.5.1",
    "tsx": "4.21.0",
    "typescript": "5.6.2",
    "vitest": "2.1.9",
    "wait-on": "^9.0.3"
  }
}
