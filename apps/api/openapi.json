{
  "openapi": "3.0.3",
  "info": {
    "title": "nostrstack API",
    "version": "0.0.0"
  },
  "components": {
    "schemas": {
      "TelemetrySummary": {
        "type": "object",
        "properties": {
          "height": {
            "type": "integer"
          },
          "hash": {
            "type": "string"
          },
          "time": {
            "type": "integer"
          },
          "txs": {
            "type": "integer"
          },
          "size": {
            "type": "integer"
          },
          "weight": {
            "type": "integer"
          },
          "interval": {
            "type": "integer"
          },
          "mempoolTxs": {
            "type": "integer"
          },
          "mempoolBytes": {
            "type": "integer"
          },
          "network": {
            "type": "string"
          },
          "version": {
            "type": "integer"
          },
          "subversion": {
            "type": "string"
          },
          "connections": {
            "type": "integer"
          },
          "headers": {
            "type": "integer"
          },
          "blocks": {
            "type": "integer"
          },
          "verificationProgress": {
            "type": "number"
          },
          "initialBlockDownload": {
            "type": "boolean"
          }
        },
        "required": [
          "height",
          "hash",
          "time"
        ],
        "additionalProperties": false
      },
      "BitcoinStatus": {
        "type": "object",
        "properties": {
          "network": {
            "type": "string"
          },
          "configuredNetwork": {
            "type": "string"
          },
          "source": {
            "type": "string",
            "enum": [
              "bitcoind",
              "esplora",
              "mock"
            ]
          },
          "telemetry": {
            "$ref": "#/components/schemas/TelemetrySummary"
          },
          "telemetryError": {
            "type": "string"
          },
          "lightning": {
            "type": "object",
            "properties": {
              "provider": {
                "type": "string"
              },
              "lnbits": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string"
                  },
                  "reason": {
                    "type": "string"
                  },
                  "error": {
                    "type": "string"
                  },
                  "httpStatus": {
                    "type": "integer"
                  },
                  "elapsedMs": {
                    "type": "integer"
                  },
                  "body": {
                    "type": "string"
                  },
                  "urlTried": {
                    "type": "string"
                  }
                },
                "required": [
                  "status"
                ],
                "additionalProperties": false
              }
            },
            "required": [
              "provider",
              "lnbits"
            ],
            "additionalProperties": false
          }
        },
        "required": [
          "network",
          "configuredNetwork",
          "source",
          "telemetry",
          "lightning"
        ],
        "additionalProperties": false
      }
    }
  },
  "paths": {
    "/health": {
      "get": {
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/.well-known/nostr.json": {
      "get": {
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "name",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/.well-known/lnurlp/{username}": {
      "get": {
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "path",
            "name": "username",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/metrics": {
      "get": {
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/config/env": {
      "get": {
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/api/lnurlp/{username}/invoice": {
      "get": {
        "parameters": [
          {
            "schema": {
              "type": "integer"
            },
            "in": "query",
            "name": "amount",
            "required": true
          },
          {
            "schema": {
              "type": "string"
            },
            "in": "path",
            "name": "username",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/api/lnurlp/{username}/webhook": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string"
                  }
                },
                "required": [
                  "id",
                  "status"
                ],
                "additionalProperties": true
              }
            }
          },
          "required": true
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "path",
            "name": "username",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/api/bolt12/offers": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string"
                  },
                  "amountMsat": {
                    "type": "integer"
                  },
                  "label": {
                    "type": "string"
                  },
                  "issuer": {
                    "type": "string"
                  },
                  "expiresIn": {
                    "type": "integer"
                  }
                },
                "required": [
                  "description"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Default Response"
          }
        }
      }
    },
    "/api/bolt12/invoices": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "offer": {
                    "type": "string"
                  },
                  "amountMsat": {
                    "type": "integer"
                  },
                  "quantity": {
                    "type": "integer"
                  },
                  "payerNote": {
                    "type": "string"
                  }
                },
                "required": [
                  "offer"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/api/telemetry/summary": {
      "get": {
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/api/bitcoin/status": {
      "get": {
        "responses": {
          "200": {
            "description": "Bitcoin status response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BitcoinStatus"
                }
              }
            }
          },
          "502": {
            "description": "Bitcoin status unavailable"
          }
        }
      }
    },
    "/api/tenants": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "domain": {
                    "type": "string"
                  },
                  "displayName": {
                    "type": "string"
                  }
                },
                "required": [
                  "domain",
                  "displayName"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/api/admin/tenants": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "domain": {
                    "type": "string"
                  },
                  "displayName": {
                    "type": "string"
                  }
                },
                "required": [
                  "domain",
                  "displayName"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/api/admin/users": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "domain": {
                    "type": "string"
                  },
                  "lightningAddress": {
                    "type": "string"
                  },
                  "pubkey": {
                    "type": "string"
                  }
                },
                "required": [
                  "domain",
                  "lightningAddress",
                  "pubkey"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      },
      "get": {
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    }
  }
}
