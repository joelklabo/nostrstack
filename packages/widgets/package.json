{
  "name": "@nostrstack/widgets",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format iife,esm,cjs --global-name NostrstackEmbed",
    "prepare": "pnpm build",
    "prepack": "pnpm build",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@nostrstack/sdk": "workspace:*",
    "jsqr": "^1.4.0",
    "qr-code-styling": "^1.9.2",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/node": "22.7.5",
    "@types/qrcode": "^1.5.6",
    "jsdom": "24.1.0",
    "tsup": "8.5.1",
    "typescript": "5.6.2",
    "vitest": "2.1.9"
  }
}
