{
  "name": "@nostrstack/react",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "prepare": "pnpm build",
    "prepack": "pnpm build",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^19.0.0-rc.1",
    "react-dom": "^19.0.0-rc.1"
  },
  "dependencies": {
    "@scure/base": "^1.2.6",
    "@nostrstack/widgets": "workspace:*",
    "buffer": "^6.0.3",
    "nostr-tools": "2.18.2",
    "qrcode.react": "^4.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@types/node": "22.7.5",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.1",
    "jest-extended": "^7.0.0",
    "jsdom": "24.1.0",
    "tsup": "8.5.1",
    "typescript": "5.6.2",
    "vitest": "2.1.9",
    "@storybook/react": "^8.2.9",
    "@storybook/test": "^8.2.9"
  }
}
