{
  "name": "@nostrstack/nostr",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "prepare": "pnpm build",
    "prepack": "pnpm build",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "nostr-tools": "^2.18.2"
  },
  "devDependencies": {
    "@types/node": "22.7.5",
    "tsup": "8.5.1",
    "typescript": "5.6.2",
    "vitest": "2.1.9"
  }
}
