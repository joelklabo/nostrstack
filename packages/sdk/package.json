{
  "name": "@nostrstack/sdk",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "prepare": "pnpm build",
    "prepack": "pnpm build",
    "generate": "pnpm --filter api exec tsx scripts/openapi-schema.ts && tsx scripts/generate.ts",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "openapi-typescript": "^7.10.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "22.7.5",
    "tsup": "8.5.1",
    "tsx": "4.21.0",
    "typescript": "5.6.2",
    "vitest": "2.1.9"
  }
}
