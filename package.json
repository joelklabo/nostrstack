{
  "name": "nostrstack",
  "description": "Nostr & Lightning Social Network Toolkit - Nerd Hacker Edition",
  "keywords": [
    "nostr",
    "lightning",
    "bitcoin",
    "social-network",
    "react",
    "sdk"
  ],
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.26.1",
  "scripts": {
    "lint": "pnpm -r lint",
    "compile": "pnpm -r typecheck",
    "lint:knip": "knip",
    "lint:cpd": "jscpd .",
    "lint:ls": "ls-lint",
    "lint:spell": "cspell \"**\" --exclude \"report/**\"",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:md": "markdownlint \"**/*.md\"",
    "lint:pub": "pnpm --filter @nostrstack/sdk run build && pnpm --filter @nostrstack/embed run build && pnpm --filter @nostrstack/blog-kit run build && pnpm -r exec publint",
    "lint:attw": "pnpm --filter \"./packages/**\" -r exec attw --pack .",
    "lint:sh": "shellcheck scripts/*.sh",
    "lint:secrets": "secretlint \"**\"",
    "lint:audit": "audit-ci --moderate",
    "lint:dep": "depcruise --config .dependency-cruiser.cjs apps packages",
    "lint:deps": "syncpack list-mismatches",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier --write .",
    "dev": "pnpm --filter api dev",
    "e2e": "pnpm --filter api test:e2e",
    "demo": "concurrently -k -n api,gallery \"pnpm --filter api dev\" \"pnpm --filter gallery dev -- --host --port 4173\"",
    "smoke:regtest-demo": "pnpm --filter api exec tsx scripts/regtest-demo-smoke.ts",
    "smoke:mutinynet-demo": "pnpm --filter api exec tsx scripts/mutinynet-demo-smoke.ts",
    "qa:regtest-demo": "pnpm --filter api exec tsx ../gallery/scripts/qa-regtest-demo.ts",
    "dev:api:entr": "./scripts/entr-api.sh",
    "dev:gallery:entr": "./scripts/entr-gallery.sh",
    "dev:logs": "./scripts/dev-logs.sh",
    "build": "pnpm -r build",
    "check": "pnpm lint && pnpm test && pnpm typecheck",
    "deps": "pnpm install",
    "deps:prod": "NODE_ENV=production pnpm install --frozen-lockfile --prod",
    "demo:regtest": "./scripts/demo-regtest.sh",
    "dev:api": "pnpm --filter api dev",
    "dev:gallery": "pnpm --filter gallery dev -- --host --port 4173",
    "demo:mutinynet": "./scripts/demo-mutinynet.sh",
    "deploy:staging": "gh workflow run azure-deploy-staging.yml --repo joelklabo/nostrstack",
    "deploy:prod": "gh workflow run azure-deploy.yml --repo joelklabo/nostrstack",
    "nostrstack": "pnpm --filter @nostrstack/injector exec nostrstack-inject",
    "demo:mainnet": "./scripts/demo-mainnet.sh"
  },
  "pnpm": {
    "overrides": {
      "zod": "3.24.1",
      "zod-to-json-schema": "3.24.1",
      "esbuild": "^0.25.0"
    },
    "onlyBuiltDependencies": [
      "@beads/bd",
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "protobufjs"
    ]
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@beads/bd": "^0.27.2",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@ls-lint/ls-lint": "^2.3.1",
    "@nostrstack/config": "workspace:*",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@types/node": "22.7.5",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "audit-ci": "^7.1.0",
    "chrome-devtools-mcp": "0.12.1",
    "concurrently": "^9.2.1",
    "cspell": "^9.4.0",
    "dependency-cruiser": "^17.3.4",
    "eslint": "8.57.0",
    "jscpd": "^4.0.5",
    "knip": "^5.29.0",
    "markdownlint-cli": "^0.47.0",
    "prettier": "3.2.5",
    "publint": "^0.3.16",
    "secretlint": "^11.2.5",
    "shellcheck": "^4.1.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "syncpack": "^13.0.4",
    "typescript": "5.6.2"
  }
}
