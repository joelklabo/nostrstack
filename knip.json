{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "packages/*/src/index.ts",
    "apps/*/src/index.ts",
    "apps/*/src/main.ts",
    "apps/*/src/main.tsx",
    "scripts/*.ts"
  ],
  "project": ["packages/*/src/**/*.{ts,tsx}", "apps/*/src/**/*.{ts,tsx}", "scripts/*.ts"],
  "ignore": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.d.ts",
    "**/dist/**",
    "**/node_modules/**",
    "**/vitest.config.ts",
    "**/vite.config.ts",
    "**/*.stories.tsx",
    "**/.storybook/**",
    "apps/social/src/KeyChip.tsx",
    "apps/social/src/KeyToggle.tsx",
    "apps/social/src/RelayCard.stories.tsx",
    "apps/social/src/cache/cacheManager.ts",
    "apps/social/src/cache/eventCache.ts",
    "apps/social/src/nostr/api.ts",
    "apps/social/src/nostr/spamFilter.ts",
    "apps/social/src/RelayProvider.tsx",
    "apps/social/src/components/ZapModal.tsx",
    "apps/social/src/DMView.tsx",
    "apps/social/src/NotificationsView.tsx",
    "apps/social/src/RelaysView.tsx",
    "apps/social/src/features/wallet/index.ts",
    "apps/social/src/hooks/useDMs.ts",
    "apps/social/src/layout/index.ts",
    "apps/social/src/screens/index.ts",
    "apps/social/src/shared/index.ts",
    "apps/app/src/App.test.tsx",
    "apps/app/src/RelayProvider.tsx",
    "apps/app/src/TelemetryBar.test.tsx",
    "apps/app/src/components/ZapModal.tsx",
    "apps/app/src/nostr/eventRenderers.test.tsx",
    "apps/app/src/nostr/eventRenderers.tsx",
    "apps/app/src/utils/identity.test.tsx",
    "apps/app/src/utils/identity.ts",
    "apps/app/src/utils/navigation.test.tsx",
    "apps/app/src/cache/cacheManager.ts",
    "apps/app/src/cache/eventCache.ts",
    "apps/app/src/nostr/api.ts",
    "apps/app/src/nostr/spamFilter.ts",
    "packages/widgets/src/config.ts",
    "packages/widgets/src/helpers.ts"
  ],
  "ignoreDependencies": [
    "axios",
    "@nostrstack/tokens",
    "chokidar",
    "@testing-library/react",
    "style-dictionary",
    "vitest",
    "eslint",
    "buffer",
    "@fastify/static",
    "fastify-type-provider-zod",
    "pino-pretty",
    "@typescript-eslint/eslint-plugin",
    "@typescript-eslint/parser",
    "eslint-plugin-import",
    "eslint-plugin-simple-import-sort",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "eslint-plugin-jsx-a11y",
    "eslint-plugin-security",
    "@nostrstack/widgets",
    "zod",
    "@types/pino-pretty",
    "@types/sinon",
    "@types/dompurify",
    "wait-on",
    "@commitlint/cli",
    "@secretlint/secretlint-rule-preset-recommend",
    "chrome-devtools-mcp",
    "@storybook/react",
    "@storybook/test",
    "@types/react-window",
    "linkify-it",
    "qrcode.react",
    "@vitest/coverage-v8",
    "@storybook/addon-docs",
    "@vitejs/plugin-basic-ssl",
    "@vitejs/plugin-react",
    "axe-core",
    "eslint-plugin-storybook",
    "@vitest/browser-playwright"
  ],
  "ignoreBinaries": [
    "test:e2e",
    "playwright",
    "prisma:generate",
    "gh",
    "nostrstack-inject",
    "tsx",
    "preview"
  ],
  "ignoreExportsUsedInFile": true,
  "ignoreIssues": {
    "packages/nostr-tools/src/nip04.ts": ["exports"],
    "packages/nostr-tools/src/pool.ts": ["exports"],
    "apps/api/src/nostr/nostr-client.ts": ["exports"],
    "apps/api/src/providers/index.ts": ["exports"],
    "apps/api/src/providers/opennode.ts": ["exports"],
    "apps/api/src/services/log-hub.ts": ["exports"],
    "apps/api/src/services/pay-events.ts": ["exports"],
    "apps/api/src/services/regtest-fund.ts": ["exports"],
    "apps/social/src/BrandedQr.tsx": ["exports"],
    "apps/social/src/InvoicePopover.tsx": ["exports"],
    "apps/social/src/PayToUnlockCard.tsx": ["exports"],
    "apps/social/src/QrLabCard.tsx": ["exports"],
    "apps/social/src/toast.tsx": ["exports"],
    "apps/social/src/ui/JsonView.tsx": ["exports"],
    "apps/social/src/useCopyAction.ts": ["exports"],
    "apps/social/src/cache/cacheManager.ts": ["exports"],
    "apps/social/src/cache/eventCache.ts": ["exports"],
    "apps/social/src/nostr/api.ts": ["exports"],
    "apps/social/src/nostr/eventRenderers.tsx": ["exports"],
    "apps/social/src/nostr/spamFilter.ts": ["exports"],
    "apps/social/src/ui/ConnectionStatus.tsx": ["exports"],
    "apps/social/src/ui/EmojiPicker.tsx": ["exports"],
    "apps/social/src/utils/identity.ts": ["exports"],
    "apps/api/src/services/nip05-cache.ts": ["exports"],
    "apps/app/src/cache/cacheManager.ts": ["exports"],
    "apps/app/src/cache/eventCache.ts": ["exports"],
    "apps/app/src/nostr/api.ts": ["exports"],
    "apps/app/src/nostr/eventRenderers.tsx": ["exports"],
    "apps/app/src/nostr/spamFilter.ts": ["exports"],
    "apps/app/src/utils/identity.ts": ["exports"],
    "packages/react/src/context.tsx": ["exports"],
    "packages/widgets/src/copyButton.ts": ["exports"],
    "packages/widgets/src/invoicePopover.ts": ["exports"],
    "packages/widgets/src/nostrUserCard.ts": ["exports"],
    "packages/widgets/src/relayBadge.ts": ["exports"],
    "packages/widgets/src/config.ts": ["exports"],
    "packages/widgets/src/helpers.ts": ["exports"]
  },
  "workspaces": {
    ".": {
      "entry": ["scripts/*.ts"],
      "project": ["scripts/*.ts"]
    },
    "packages/*": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/nostr-tools": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/nostr": {
      "entry": ["src/index.ts", "src/testing.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/test-utils": {
      "entry": ["src/index.ts", "src/api/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "apps/*": {
      "entry": ["src/index.ts", "src/main.ts", "src/main.tsx", "src/App.tsx"],
      "project": ["src/**/*.{ts,tsx}"],
      "vitest": false,
      "vite": false
    }
  }
}
